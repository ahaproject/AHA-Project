<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aha_black</item>
        <item name="colorPrimaryDark">@color/aha_black</item>
        <item name="colorAccent">@color/aha_basic</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_green_dark</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/light_grey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10.0sp</item>
    </style>






    <!--style for the app-->
    <style name="AHATheme" parent="AppTheme" >
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:dividerHeight">20dp</item>
    </style>


    <!--style for the questions in the medical history -->
    <style name="QuestionText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/aha_black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
